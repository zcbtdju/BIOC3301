time compare_categories.py --method anosim -i ~/2018_02_smb/SeqPrep_joined/diversity/bdiv_even739/unweighted_unifrac_dm.txt -m ~/stats/18_map_modified.tsv -c UPGMA-u -o anosim_1.1_unweighted -n 999

source deactivate


